{
  "name": "natours",
  "version": "1.0.0",
  "description": "Landing page for natours",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "sass sass/main.scss css/style.css --watch",
    "dev-server": "live-server",
    "start": "npm-run-all --parallel dev-server watch:sass",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss css/style.concat.css --use=autoprefixer --output=css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jobeiri/natours.git"
  },
  "author": "Amir Hossein Jobeiri",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jobeiri/natours/issues"
  },
  "homepage": "https://github.com/jobeiri/natours#readme",
  "devDependencies": {
    "autoprefixer": "^10.0.4",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^4.1.1",
    "postcss-cli": "^8.3.0",
    "sass": "^1.29.0"
  }
}
